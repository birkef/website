---
import "@fontsource/montserrat/500.css";

import Layout from "../layouts/MainLayout.astro";
import Nickname from "../components/Nickname.astro";
import SocialLinks from "../components/SocialLinks.astro";
import PageLink from "../components/PageLink.astro";

const pages = [
  {
    name: "About me",
    url: "/about",
  },
  {
    name: "My projects",
    url: "/projects",
  },
];
---

<Layout title="Main">
  <Nickname />
  <p>I'm real, but not everyone is.</p>
  <div class="pages">
    {pages.map((page) => <PageLink name={page.name} url={page.url} />)}
  </div>
  <SocialLinks />
  <a class="secret" href="/404">404</p>
</Layout>

<style>
  .secret {
    color: #232136;
    font-size: 2px;
  }

  .secret:hover {
    color: #232136;
  }
</style>