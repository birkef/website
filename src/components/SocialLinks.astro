---
interface ISocialLink {
	name: string,
	icon: string,
	url: string,
}

const socialLinks: ISocialLink[] = [
	{
		name: "GitHub",
		icon: "tabler--brand-github",
		url: "https://github.com/birkef",
	},
	{
		name: "Telegram",
		icon: "tabler--brand-telegram",
		url: "https://t.me/birkef"
	}
];
---

<div class:list={["m-[1vh]", "flex", "items-center", "justify-center"]}>
	{
		socialLinks.map((link: ISocialLink) => (
			<a
				title={link.name}
				class:list={[
					"mx-[10%]",
					"my-[5%]",
					"select-none",
					"text-rosePineMoon-base",
					"hover:text-rosePineMoon-base",
				]}
				rel="me"
				href={link.url}
			>
				<span
					title={link.name}
					class=`iconify ${link.icon} text-rosePineMoon-text text-[48px] hover:text-rosePineMoon-subtle duration-300`
				/>
			</a>
		))
	}
</div>
