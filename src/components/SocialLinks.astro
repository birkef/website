---
import { Icon } from "astro-icon";

const socialLinks = [
  {
    name: "GitHub",
    icon: "github",
    url: "https://github.com/birksovskiy",
  },
  {
    name: "Mastodon",
    icon: "mastodon",
    url: "https://lor.sh/@birksovskiy",
  },
];
---

<div class="socials">
  {
    socialLinks.map((link) => (
      <a title={link.name} rel="me" href={link.url}>
        <Icon
          name={`ri:${link.icon}-line`}
          color="#e0def4"
          size={48}
          title={link.name}
        />
      </a>
    ))
  }
</div>

<style>
  .socials {
    display: flex;
    margin-inline: 28%;
    margin-top: 10%;
  }

  .socials a {
    color: #232136;
  }

  .socials a:hover {
    color: #232136;
  }

  a {
    margin: 10%;
    user-select: none;
  }

  [astro-icon] {
    transition-duration: 0.3s;
  }

  [astro-icon]:hover {
    color: #908caa;
  }
</style>
