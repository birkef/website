---
import { Icon } from "astro-icon";

const socialLinks = [
	{
		name: "GitHub",
		icon: "github",
		url: "https://github.com/birksovskiy",
	},
	{
		name: "Mastodon",
		icon: "mastodon",
		url: "https://lor.sh/@birksovskiy",
	},
];
---

<div class:list={["m-[10%]", "flex", "items-center", "justify-center"]}>
	{
		socialLinks.map((link) => (
			<a
				title={link.name}
				class:list={[
					"mx-[5%]",
					"select-none",
					"text-rosePineMoon-base",
					"hover:text-rosePineMoon-base",
				]}
				rel="me"
				href={link.url}
			>
				<Icon
					name={`ri:${link.icon}-line`}
					class:list={["hover:color-rosePineMoon-subtle", "duration-300"]}
					color="#e0def4"
					size={48}
					title={link.name}
				/>
			</a>
		))
	}
</div>
