---
import { Icon } from 'astro-icon';

const socialLinks = [
    {
        "name": "GitHub",
        "url": "https://github.com/birksovskiy"
    },
    {
        "name": "Mastodon",
        "url": "https://lor.sh/@birksovskiy"
    }
]
---

<div class="socials">
    { socialLinks.map(link =>
            <a href={ link.url }>
                <Icon
                    pack="ri"
                    name={ `${link.name.toLowerCase()}-line` }
                    color="#e0def4"
                    size={ 48 }
                    title={ link.name }
                />
            </a>
        )
    }
</div>

<style>
    .socials {
        margin: 10%;
    }

    a {
        margin: 5%;
        user-select: none;
    }
</style>